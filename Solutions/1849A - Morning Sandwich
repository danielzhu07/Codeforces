#include <bits/stdc++.h>
using namespace std;

int main(){
	int T;
	cin>>T;
	while(T--){
	    int b, c, h;
	    cin>>b>>c>>h;
	    int x, y;
	    x = b; y = c+h;
	    if(x > y){ //more bread
	        cout<<2 * y + 1<<endl;
	    }
	    else if(x <= y){ //less bread
	        cout<<2*(x-1) + 1<<endl;
	    }
	        
	}
	return 0;
	}
